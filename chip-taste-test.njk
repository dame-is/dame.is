  function createBarChart(svgId, data, maxValue = 100, valueLabel = "Score") {
    const svg = document.getElementById(svgId);
    const margin = { top: 20, right: 80, bottom: 50, left: 200 };
    const width = svg.clientWidth - margin.left - margin.right;
    const height = 400 - margin.top - margin.bottom;
    
    // Clear SVG
    svg.innerHTML = '';
    
    const g = document.createElementNS("http://www.w3.org/2000/svg", "g");
    g.setAttribute("transform", `translate(${margin.left},${margin.top})`);
    svg.appendChild(g);
    
    // Create scales
    const xScale = value => (value / maxValue) * width;
    const yScale = index => index * (height / data.length) + (height / data.length / 2);
    
    // Draw bars
    data.forEach((d, i) => {
      const bar = document.createElementNS("http://www.w3.org/2000/svg", "rect");
      bar.setAttribute("x", 0);
      bar.setAttribute("y", i * (height / data.length) + 5);
      bar.setAttribute("width", xScale(d.value));
      bar.setAttribute("height", (height / data.length) - 10);
      bar.setAttribute("fill", d.color);
      g.appendChild(bar);
      
      // Name labels
      const label = document.createElementNS("http://www.w3.org/2000/svg", "text");
      label.setAttribute("x", -10);
      label.setAttribute("y", yScale(i));
      label.setAttribute("text-anchor", "end");
      label.setAttribute("dominant-baseline", "middle");
      label.textContent = d.name;
      g.appendChild(label);
      
      // Value labels
      const valueText = document.createElementNS("http://www.w3.org/2000/svg", "text");
      valueText.setAttribute("x", xScale(d.value) + 5);
      valueText.setAttribute("y", yScale(i));
      valueText.setAttribute("dominant-baseline", "middle");
      valueText.textContent = d.value.toFixed(1);
      g.appendChild(valueText);
    });
    
    // X Axis
    const xAxis = document.createElementNS("http://www.w3.org/2000/svg", "line");
    xAxis.setAttribute("x1", 0);
    xAxis.setAttribute("y1", height);
    xAxis.setAttribute("x2", width);
    xAxis.setAttribute("y2", height);
    xAxis.setAttribute("stroke", "#000");
    g.appendChild(xAxis);
    
    // X Axis ticks
    const isMobile = window.innerWidth < 500;
    if (isMobile) {
      // Only show min and max ticks
      [0, maxValue].forEach(i => {
        const tick = document.createElementNS("http://www.w3.org/2000/svg", "line");
        tick.setAttribute("x1", xScale(i));
        tick.setAttribute("y1", height);
        tick.setAttribute("x2", xScale(i));
        tick.setAttribute("y2", height + 5);
        tick.setAttribute("stroke", "#000");
        g.appendChild(tick);
        const tickLabel = document.createElementNS("http://www.w3.org/2000/svg", "text");
        tickLabel.setAttribute("x", xScale(i));
        tickLabel.setAttribute("y", height + 20);
        tickLabel.setAttribute("text-anchor", "middle");
        tickLabel.textContent = i;
        g.appendChild(tickLabel);
      });
    } else {
      for (let i = 0; i <= maxValue; i += 20) {
        const tick = document.createElementNS("http://www.w3.org/2000/svg", "line");
        tick.setAttribute("x1", xScale(i));
        tick.setAttribute("y1", height);
        tick.setAttribute("x2", xScale(i));
        tick.setAttribute("y2", height + 5);
        tick.setAttribute("stroke", "#000");
        g.appendChild(tick);
        const tickLabel = document.createElementNS("http://www.w3.org/2000/svg", "text");
        tickLabel.setAttribute("x", xScale(i));
        tickLabel.setAttribute("y", height + 20);
        tickLabel.setAttribute("text-anchor", "middle");
        tickLabel.textContent = i;
        g.appendChild(tickLabel);
      }
    }
    
    // X Axis label
    const xLabel = document.createElementNS("http://www.w3.org/2000/svg", "text");
    xLabel.setAttribute("x", width / 2);
    xLabel.setAttribute("y", height + 40);
    xLabel.setAttribute("text-anchor", "middle");
    xLabel.textContent = valueLabel;
    g.appendChild(xLabel);
  }
  
  // Draw the charts
  document.addEventListener('DOMContentLoaded', () => {
    createBarChart("accuracy-chart", accuracyData, 100, "Accuracy Score");
    
    // Tab switching
    document.querySelectorAll('.tab').forEach(tab => {
      tab.addEventListener('click', () => {
        // Remove active class from all tabs and views
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.chart-view').forEach(v => v.classList.remove('active'));
        
        // Add active class to current tab and view
        tab.classList.add('active');
        const targetView = document.getElementById(`${tab.dataset.target}-view`);
        targetView.classList.add('active');
        
        // Render the appropriate chart
        const targetId = tab.dataset.target;
        if (targetId === "accuracy") {
          createBarChart("accuracy-chart", accuracyData, 100, "Accuracy Score");
        } else if (targetId === "enjoyment") {
          createBarChart("enjoyment-chart", enjoymentData, 100, "Enjoyment Score");
        } else if (targetId === "dame") {
