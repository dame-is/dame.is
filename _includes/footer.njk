<footer>
    <div class="footer-container">
        <!-- Last Updated Section -->
        <div class="footer-section footer-last-updated">
            <span class="last-updated-label">Last Updated:</span>
            <span class="last-updated-timestamp">
                {% if page.inputPath %}
                    {% set lastModified = page.inputPath | lastModifiedDate %}
                    <span title="{{ lastModified | date }}">{{ lastModified | date("relative") }}</span>
                {% else %}
                    Unknown
                {% endif %}
            </span>
        </div>
    </div>
</footer> 