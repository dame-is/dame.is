<footer>
    <div class="footer-container">
        <!-- Last Updated Section -->
        <div class="footer-section footer-last-updated">
            <span class="last-updated-label">Last Updated:</span>
            <span class="last-updated-timestamp">
                {% if page.date %}
                    {{ page.date | date }}
                {% elif page.inputPath %}
                    <!-- Fall back to file stats if available -->
                    {{ page.inputPath | lastModifiedDate | date }}
                {% else %}
                    Unknown
                {% endif %}
            </span>
        </div>
    </div>
</footer> 