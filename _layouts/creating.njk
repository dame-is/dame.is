---
layout: base
---

<div class="creating-container">
  <h1>{{ title }}</h1>
  
  {{ content | safe }}
  
  <div class="creating-items">
    {% set creatingPages = collections.creating | sort(true, false, "date") %}
    
    <table class="creating-table">
      <tbody>
      {% for page in creatingPages %}
        {% if page.url != '/creating/' and page.data.title %}
        <tr>
          <td>
            <a href="{{ page.url }}" class="creating-item-title">{{ page.data.title }}</a>
          </td>
          <td>{{ page.data.date | date }}</td>
          <td>
            {% if page.data.tags %}
              <div class="tag-list">
                {% for tag in page.data.tags %}
                  <span class="tag">{{ tag }}</span>
                {% endfor %}
              </div>
            {% endif %}
          </td>
        </tr>
        {% endif %}
      {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% block scripts %}
{% endblock %} 